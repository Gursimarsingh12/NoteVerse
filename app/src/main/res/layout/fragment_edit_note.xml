<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.EditNoteFragment"
    >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Note"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_regular"/>

        <EditText
            android:id="@+id/addNoteTitle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/pink_border"
            android:elevation="20dp"
            android:fontFamily="@font/poppins_regular"
            android:hint="Enter title"
            android:inputType="text"
            android:padding="12dp"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:autofillHints=""/>

        <EditText
            android:id="@+id/addNoteDesc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="156dp"
            android:layout_marginEnd="16dp"
            android:autofillHints=""
            android:background="@drawable/pink_border"
            android:elevation="20dp"
            android:fontFamily="@font/poppins_regular"
            android:gravity="top"
            android:hint="Enter the description"
            android:inputType="textMultiLine"
            android:padding="12dp"
            android:textSize="18sp"
            android:layout_marginBottom="130dp"
            app:layout_constraintBottom_toTopOf="@+id/saveNoteBtn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/addNoteTitle" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTint="@color/pink"
            android:src="@drawable/delete_icon"
            android:layout_marginBottom="50dp"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:focusable="true"
            android:elevation="20dp"
            android:contentDescription="floating action"
            android:id="@+id/deleteNoteBtn"
            app:fabCustomSize="70dp"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/saveNoteBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/pink"
            android:clickable="true"
            android:contentDescription="floating action"
            android:elevation="20dp"
            android:focusable="true"
            android:src="@drawable/tick_icon"
            android:layout_marginEnd="10dp"
            app:fabCustomSize="70dp"
            app:layout_constraintBottom_toBottomOf="@+id/deleteNoteBtn"
            app:layout_constraintEnd_toStartOf="@+id/deleteNoteBtn"
            app:layout_constraintTop_toTopOf="@+id/deleteNoteBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>